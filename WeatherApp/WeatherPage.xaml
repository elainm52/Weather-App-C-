<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WeatherPage"
             Title="WeatherPage">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
          RowSpacing="20">
        <!-- Background Image -->
        <Image Source="backgroundimage.jpg"
               Aspect="AspectFill"
               Grid.RowSpan="5"
               Opacity="0.9" />
        <!-- Location and Search -->
        <Grid Grid.Row="0"
          Margin="20,20,20,0"
          ColumnDefinitions="*,Auto">
            <Entry x:Name="searchEntry"
            Placeholder="Enter city name"
            FontSize="16"
            BackgroundColor="White"
            TextColor="Black"
            Margin="0,0,10,0"
            VerticalOptions="Center" />
            <Button Text="Search"
              FontSize="16"
              BackgroundColor="#4682B4"
              TextColor="White"
              Clicked="ImageButton_Clicked"
              VerticalOptions="Center" />

        </Grid>

        <!-- City and Weather Description -->
        <StackLayout Grid.Row="1"
                     Orientation="Vertical">
            <Label x:Name="lbCity"
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="FloralWhite" />
            <Label x:Name="lbWeatherDesc"
                   HorizontalOptions="Center"
                   TextColor="NavajoWhite"
                   FontAttributes="Bold"
                   FontSize="20" />
        </StackLayout>

        <!-- Weather Icon -->
        <Image Grid.Row="2"
               x:Name="imgWeatherIcon"
               VerticalOptions="Start"
               HeightRequest="300"
               WidthRequest="300" />

        <!-- Weather Details -->
        <Grid Grid.Row="3"
              RowDefinitions="Auto,Auto"
              ColumnDefinitions="0.33*,0.33*,0.33*"
              Margin="20">
            <!-- Humidity -->
            <Image Grid.Row="0"
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   HeightRequest="25"
                   Source="humidity.png" />
            <Label x:Name="lbHumidity"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalOptions="Center" />

            <!-- Temperature -->
            <Label x:Name="lbTemperature"
                   Grid.Row="0"
                   Grid.Column="1"
                   Grid.RowSpan="2"
                   HorizontalOptions="Center"
                   FontSize="40"
                   FontAttributes="Bold" />

            <!-- Wind -->
            <Image Grid.Row="0"
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   HeightRequest="25"
                   Source="wind.png" />
            <Label x:Name="lbWind"
                   Grid.Row="1"
                   Grid.Column="2"
                   HorizontalOptions="Center" />
        </Grid>

        <!-- Five-Day Forecast with Three-Hour Intervals -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                <!-- Hourly Forecast -->
                <Frame BackgroundColor="#4682B4" CornerRadius="10" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="HOURLY FORECAST"
                               FontSize="16"
                               TextColor="White"
                               FontAttributes="Bold" />
                        <CollectionView x:Name="cvHourlyWeather"
                                        ItemsSource="{Binding HourlyWeatherList}"
                                        HeightRequest="100"
                                        SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                        <Label Text="{Binding Dt_txt, StringFormat='{0:hh:mm tt}'}" FontSize="14" TextColor="White" />
                                        <Image Source="{Binding Weather[0].CustomIcon}" HeightRequest="40" />
                                        <Label Text="{Binding Main.Temperature, StringFormat='{0}°C'}" FontSize="14" TextColor="White" />
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- 5-Day Forecast -->
                <Frame BackgroundColor="#4682B4" CornerRadius="10" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="5-DAY FORECAST"
                               FontSize="16"
                               TextColor="White"
                               FontAttributes="Bold" />
                        <CollectionView x:Name="cvFiveDayWeather"
                                        ItemsSource="{Binding FiveDayWeatherList}"
                                        IsGrouped="True"
                                        SelectionMode="None">
                            <CollectionView.GroupHeaderTemplate>
                                <DataTemplate>
                                    <Label Text="{Binding Key, StringFormat='{0:dddd, MMM dd}'}"
                                           FontSize="Large"
                                           TextColor="White"
                                           HorizontalOptions="Center" />
                                </DataTemplate>
                            </CollectionView.GroupHeaderTemplate>
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto,Auto" Padding="5">
                                        <Label Text="{Binding Dt_txt, StringFormat='{0:hh:mm tt}'}" FontSize="14" TextColor="White" />
                                        <Image Source="{Binding Weather[0].CustomIcon}" HeightRequest="30" Grid.Column="1" />
                                        <Label Text="{Binding Main.Temperature, StringFormat='{0}°C'}" FontSize="14" TextColor="White" Grid.Column="2" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
